{
  "manifest_version": 3,
  "name": "京价保 - 京东价保助手",
  "short_name": "京价保",
  "description": "京价保是一个监控京东商品价格变化，即时提供价保申请信息的浏览器插件",
  "version": "1.15.9",
  "background": {
    "service_worker": "static/service_worker.js"
  },
  "action": {
    "default_icon": "static/image/icon/jjb.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.jd.com/*",
        "*://*.jd.hk/*"
      ],
      "js": [
        "static/jquery.min.js",
        "static/content_script.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "run_at": "document_start",
      "js": [
        "static/mobile_script.js"
      ],
      "matches": [
        "*://*.m.jd.com/*",
        "*://m.jr.jd.com/*",
        "*://wq.jd.com/*",
        "*://wqs.jd.com/*",
        "*://msitepp-fm.jd.com/*"
      ],
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "run_at": "document_end",
      "js": [
        "static/priceChart.js"
      ],
      "matches": [
        "*://item.jd.com/*",
        "*://re.jd.com/*"
      ]
    }
  ],
  "icons": {
    "16": "static/image/icon/16.png",
    "48": "static/image/icon/48.png",
    "128": "static/image/icon/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "static/touch-emulator.js",
        "static/mobile_script.js",
        "static/background.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "alarms",
    "contextMenus",
    "notifications",
    "declarativeNetRequest",
    "offscreen",
    "storage"
  ],
  "host_permissions": [
    "*://*.jd.com/*",
    "*://*.jd.hk/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; img-src 'self' https://*.jd.com data:; connect-src 'self' https://*.jd.com https://www.googleapis.com"
  }
}